@page
@model ProjectRagnarock.Pages.MuseTales.DeleteExpoTestModel
@{
    ViewData["Title"] = "Slet en expo";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Udstilling</th>
            <th>Redigering</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AllExpos)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    <form asp-page-handler="delete" method="post">
                        <button asp-for=""  class="btn btn-danger">Delete</button>
                        <input type="hidden" name="id" value="@item.Id" />
                    </form>
                </td>
               
            </tr>
        }
    </tbody>
</table>



   
